{
    "id": "com.tado",
    "sdk": 2,
    "name": {
        "en": "tadoÂ°"
    },
    "description": {
        "en": "Adds support for Tado"
    },
    "category": "climate",
    "version": "1.0.1",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Athom B.V."
    },
    "images": {
	    "large": "/assets/images/large.png",
	    "small": "/assets/images/small.png"
    },
    "drivers": [
	    {
		    "id": "thermostat",
		    "class": "thermostat",
		    "capabilities": [ "measure_temperature", "measure_humidity", "target_temperature" ],
		    "name": {
			    "en": "Thermostat",
			    "nl": "Thermostaat"
		    },
		    "images": {
			    "large": "/drivers/thermostat/assets/images/large.png",
			    "small": "/drivers/thermostat/assets/images/small.png"
		    },
		    "pair": [
			    {
				    "id": "login"
			    },
			    {
				    "id": "list_devices",
				    "template": "list_devices",
				    "navigation": {
					    "next": "add_devices"
				    }
			    },
			    {
				    "id": "add_devices",
				    "template": "add_devices"
			    }
		    ],
		    "settings": [  
                {
                    "id": "username",
                    "type": "text",
                    "label": {
                        "en": "Username",
                        "nl": "Gebruikersnaam"
                    },
                    "value": ""
                },
                {
                    "id": "password",
                    "type": "password",
                    "label": {
                        "en": "Password",
                        "nl": "Wachtwoord"
                    },
                    "value": ""
                }
		    ]
	    }
    ],
    "capabilities": {
	    "tado_manual": {
		    "type": "boolean",
		    "setable": true,
		    "getable": true,
		    "title": {
			    "en": "Manual Control",
			    "nl": "Handmatige bediening"
		    }
	    }
    }
}